//this program will determine the batting avarage of a player.
//the number of hits and at bats are set internally in program.
//Albert Lozada and Michael Velez
#include<iostream>
using namespace std;
const int AT_BAT = 421;
const int HITS = 123;

int main()
{
	float batAvg;

		batAvg = static_cast<float> (HITS) / AT_BAT; //an asigment statement
		cout << "the batting avarage is " << batAvg << endl; // output the results
		system("pause");
		return 0;
}

