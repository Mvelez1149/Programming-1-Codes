#include <iostream>
#include <cmath>
using namespace std;

const float PI = 3.14159;
int main()
{
	// This program will calculate the diameter of the pizza in inches, the number of slices that may be taken from a pizza of that size and display a telling the number of slices.

	int Pizza;
	float area;
	float diameterOfPizza;
	float numberOfSlices;
	float numberOfSlicesTakenFromPizza;
	float sliceOfPizza;
	float radius;
	
	
     cout << "input the diameter of pizza in inches ";
	 cin >> diameterOfPizza;
	 radius = diameterOfPizza / 2;
	 area = PI*pow(radius, 2);
	 numberOfSlices = area / 14.125;
	 cout << setprecision(1)
	 cout << "the number of slices is " << numberOfSlices << endl;

	 system("pause");
	 return 0;

	 
}
